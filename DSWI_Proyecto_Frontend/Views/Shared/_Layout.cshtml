<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DSWI_Proyecto_Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DSWI_Proyecto_Frontend.styles.css" asp-append-version="true" />
</head>
<body style="background-color: rgb(243, 243, 243);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DSWI_Proyecto_Frontend</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @*Area*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Area" asp-action="ListarArea">Áreas</a>
                        </li>

                        @*Categoria*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="ListarCategorias">Categorías</a>
                        </li>

                        @*Complejidad*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Complejidad" asp-action="ListarComplejidad">Complejidades</a>
                        </li>

                        @*Estado*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Estado" asp-action="ListarEstado">Estados</a>
                        </li>

                        @*Prioridad*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Prioridad" asp-action="ListarPrioridad">Prioridades</a>
                        </li>

                        @*Tipo*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tipo" asp-action="ListarTipo">Tipos</a>
                        </li>

                        @*TAREA*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tarea" asp-action="ListarTareas">Tareas</a>
                        </li>

                        @*Proyecto*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Proyecto" asp-action="ListarProyectos">Proyectos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DSWI_Proyecto_Frontend - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
