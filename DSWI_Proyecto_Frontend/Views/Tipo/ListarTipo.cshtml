@model IEnumerable<DSWI_Proyecto_Frontend.Models.Tipo>

@{
    ViewData["Title"] = "ListarTipo";
}

<div class="container">
    <h1>Lista de Tipos</h1>

    <p>
        <a class="btn btn-success" asp-action="CrearTipo">Crear Nuevo Tipo</a>
    </p>
    <div class="container card" style="box-shadow: 5px 5px 20px rgba(0,0,0,0.4)">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdTipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "EditarTipo", new {  id=item.IdTipo}, new {@class = "btn btn-warning" })
                            @*@Html.ActionLink("Details", "Details", new { id=item.IdTarea})*@
                            @Html.ActionLink("Eliminar", "EliminarTipo", new {  id=item.IdTipo  }, new {@class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
