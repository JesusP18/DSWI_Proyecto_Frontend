@model DSWI_Proyecto_Frontend.Models.Estado

@{
    ViewData["Title"] = "Detalle Estado";
}

<div class="container">
    <h1 class="mt-4">Detalle del Estado</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdEstado)</dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-8">
            <a href="@Url.Action("EditarEstado", new { id = Model.IdEstado })" class="btn btn-primary mr-2">Editar</a>
            <a href="@Url.Action("ListarEstado")" class="btn btn-secondary">Retorno</a>
        </div>
    </div>
</div>
