@model IEnumerable<DSWI_Proyecto_Frontend.Models.Tarea>

@{
    ViewData["Title"] = "ListarTareas";
}

<div class="container">
    <h1>Lista de Tareas</h1>

    <p>
        <a class="btn btn-success" asp-action="CrearTarea">Crear Nueva Tarea</a>
    </p>
    <div class="container card" style="box-shadow: 5px 5px 20px rgba(0,0,0,0.4)">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Nombre del Proyecto
                    </th>
                    <th>
                        Descripción de Tareas
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdTarea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreProyecto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescripcionTarea)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "EditarTarea", new {  id=item.IdTarea}, new {@class = "btn btn-warning" })
                            @*@Html.ActionLink("Details", "Details", new { id=item.IdTarea})*@
                            @Html.ActionLink("Eliminar", "EliminarTarea", new {  id=item.IdTarea  }, new {@class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
