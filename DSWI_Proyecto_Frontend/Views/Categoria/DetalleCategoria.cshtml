@model DSWI_Proyecto_Frontend.Models.Categoria

@{
    ViewData["Title"] = "DetalleCategoria";
}

<h1>Detalle de Categoría</h1>

<div>
    @*<h4>Categoría</h4>*@
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdCategoria)
        </dd>
        <dt class="col-sm-2">
            Descripción:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "EditarCategoria", new { id = Model.IdCategoria }, new { @class = "btn btn-success" }) |
    <a asp-action="ListarCategorias" class="btn btn-secondary">Regresar</a>
</div>

